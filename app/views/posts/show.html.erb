<h1><%= @post.title %></h1>

<p>
	<strong>Text:</strong>
	<%= @post.text %>
</p>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
	<%= f.label :commenter %><br />
	<%= f.text_field :commenter %>
</p>
<p>
	<%= f.label :body %><br />
	<%= f.text_area :body %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>

<nav>
<%= link_to 'Edit Post', edit_post_path(@post) %>
<%= link_to 'Back to Posts', posts_path %>
</nav>